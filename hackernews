 SELECT title, score 
 FROM hacker_news
 ORDER BY score DESC 
 LIMIT 5; 
 
SELECT SUM(score) 
FROM hacker_news; 

SELECT user, SUM(score) 
FROM hacker_news
GROUP BY user 
HAVING SUM(score) > 200 
ORDER BY 2 DESC;  

SELEcT SUM(score) FROM hacker_news; 
SELECT (517 + 309 + 304 + 282) / 6366.0; 

-- This SQL statement returns the wrong result set. It returns the total count of instances for ALL users instead of BY each guilty user.
SELECT user, COUNT(url) 
FROM hacker_news
WHERE url LIKE '%watch?v=dQw4w9WgXcQ%';  

-- Correct SQL statements
SELECT user, COUNT(url) 
FROM hacker_news
WHERE url LIKE '%watch?v=dQw4w9WgXcQ%' 
GROUP BY user 
ORDER BY COUNT(*) DESC; 

SELECT user, COUNT(*) 
FROM hacker_news
WHERE url LIKE '%watch?v=dQw4w9WgXcQ%' 
GROUP BY user 
ORDER BY COUNT(*) DESC; 

SELECT user, COUNT(*)
FROM hacker_news
WHERE url LIKE '%watch?v=dQw4w9WgXcQ%'
GROUP BY 1 
ORDER BY 2 DESC; 